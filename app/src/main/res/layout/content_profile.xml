<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCream"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.diary.ProfileActivity">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_lv_2"
        android:background="@color/colorAccent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="@dimen/line_lv_2"
            android:layout_height="match_parent"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_profile_height"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/mg_layout"
                android:paddingRight="@dimen/mg_layout">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/daily_calories_goal"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtCaloriesGoal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:gravity="center"
                    android:inputType="numberSigned"
                    android:text="@string/_1550"
                    android:textSize="@dimen/txt_normal"
                    tools:ignore="LabelFor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_profile_height"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/mg_layout"
                android:paddingRight="@dimen/mg_layout">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/bmi"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvBMI"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:gravity="center"
                    android:text="@string/_28"
                    android:textSize="@dimen/txt_normal" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="@dimen/line_lv_2"
            android:layout_height="match_parent"
            android:background="@color/colorAccent" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_lv_2"
        android:background="@color/colorAccent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llWeightHeightUnit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_profile_height"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/mg_layout"
                android:paddingRight="@dimen/mg_layout">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/weight_height_units" />

                <Spinner
                    android:id="@+id/spWeightHeightUnit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llGender"
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_profile_height"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/mg_layout"
                android:paddingRight="@dimen/mg_layout">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/gender" />

                <Spinner
                    android:id="@+id/spGender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_profile_height"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/mg_layout"
                android:paddingRight="@dimen/mg_layout">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/age" />

                <EditText
                    android:id="@+id/edtAge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:gravity="center"
                    android:inputType="numberSigned"
                    android:text="@string/_28"
                    android:textSize="@dimen/txt_normal"
                    tools:ignore="LabelFor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_profile_height"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/mg_layout"
                android:paddingRight="@dimen/mg_layout">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/height_cms" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edtHeight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:inputType="numberSigned"
                        android:text="@string/_160_0"
                        android:textSize="@dimen/txt_normal"
                        tools:ignore="LabelFor" />

                    <LinearLayout
                        android:id="@+id/llHeightIn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/edtHeightFt"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:inputType="numberSigned"
                            android:text="@string/_5"
                            android:textSize="@dimen/_14ssp"
                            tools:ignore="LabelFor" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/ft" />

                        <EditText
                            android:id="@+id/edtHeightIn"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="numberSigned"
                            android:text="@string/_3"
                            android:textSize="@dimen/_14ssp"
                            tools:ignore="LabelFor" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/in" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_profile_height"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/mg_layout"
                android:paddingRight="@dimen/mg_layout">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/current_weight" />

                <EditText
                    android:id="@+id/edtCurrentWeight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="@string/_80_0"
                    android:textSize="@dimen/txt_normal"
                    tools:ignore="LabelFor" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llWeightGoal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_profile_height"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/mg_layout"
                android:paddingRight="@dimen/mg_layout">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/goal_weight" />

                <EditText
                    android:id="@+id/edtWeightGoal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="@string/_64_0"
                    android:textSize="@dimen/txt_normal"
                    tools:ignore="LabelFor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/_40sdp"
                android:paddingLeft="@dimen/mg_layout"
                android:paddingRight="@dimen/mg_layout">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/activity_level" />

                <Spinner
                    android:id="@+id/spActivityLevel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_profile_height"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/mg_layout"
                android:paddingRight="@dimen/mg_layout">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/weeky_weight_loss_goal" />

                <EditText
                    android:id="@+id/edtWeekyWeightLossGoal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="@string/_0_3"
                    android:textSize="@dimen/txt_normal"
                    tools:ignore="LabelFor" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llUnitMeasurement"
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_profile_height"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/mg_layout"
                android:paddingRight="@dimen/mg_layout">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/unit_of_measurement" />

                <Spinner
                    android:id="@+id/spUnitMeasurement"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:gravity="center" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_profile_height"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/mg_layout"
                android:paddingRight="@dimen/mg_layout">

                <Button
                    android:id="@+id/button"
                    style="@style/ButtonBottom"
                    android:layout_gravity="bottom|end"
                    android:text="@string/continue_" />

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>