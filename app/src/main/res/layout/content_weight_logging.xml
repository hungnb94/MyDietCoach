<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_15sdp">

        <TextView
            android:id="@+id/tvSetGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_your_goal"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tvSetGoal"
            android:paddingTop="@dimen/_20sdp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_40sdp">

                <ImageView
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:src="@drawable/weight_wheel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/goal"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_14ssp" />

                <EditText
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:inputType="numberSigned"
                    android:textSize="@dimen/_22ssp"
                    tools:ignore="LabelFor,UnusedAttribute" />

            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.6">

                <ImageView
                    android:id="@+id/ivWeightRuler"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_245sdp"
                    android:layout_marginStart="@dimen/_112sdp"
                    android:src="@drawable/track_empty" />

                <FrameLayout
                    android:id="@+id/flStartWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_90sdp"
                    android:layout_marginTop="@dimen/_120sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/start_weight"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_13sdp" />

                    <ImageView
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_65sdp"
                        android:layout_marginStart="@dimen/_70sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/track_weight_container" />

                </FrameLayout>

                <ImageView
                    android:layout_marginStart="@dimen/_150sdp"
                    android:src="@drawable/weights_container"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_below="@id/ivWeightRuler" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>