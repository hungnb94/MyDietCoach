<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_15sdp"
            android:paddingTop="@dimen/_15sdp">

            <TextView
                style="@style/SettingsActivityHeader"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:text="@string/gender" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp">

                <TextView
                    style="@style/SettingsActivityNormal"
                    android:text="@string/gender" />

                <Spinner
                    android:id="@+id/spinnerGender"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_lv_1"
                android:background="@color/colorGrey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp">

                <TextView
                    style="@style/SettingsActivityNormal"
                    android:text="@string/start_weight" />

                <EditText
                    android:id="@+id/edtWeight"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAccent"
                    android:inputType="numberSigned"
                    android:textSize="@dimen/_13ssp"
                    tools:ignore="LabelFor"
                    tools:targetApi="lollipop" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_lv_1"
                android:background="@color/colorGrey" />

            <TextView
                style="@style/SettingsActivityHeader"
                android:layout_marginTop="@dimen/_15sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:text="@string/notifications" />

            <LinearLayout
                android:id="@+id/llChooseNotificationSound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp">

                <TextView
                    style="@style/SettingsActivityNormal"
                    android:text="@string/choose_notification_sound" />

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/widget_arrow" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_lv_1"
                android:background="@color/colorGrey" />

            <LinearLayout
                android:id="@+id/llSetSleepingHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    style="@style/SettingsActivityNormal"
                    android:text="@string/set_sleeping_hours" />

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/widget_arrow" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_lv_1"
                android:background="@color/colorGrey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp">

                <TextView
                    style="@style/SettingsActivityNormal"
                    android:text="@string/play_notifications_sound" />

                <Switch
                    android:id="@+id/swPlaySound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:src="@drawable/widget_arrow" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_lv_1"
                android:background="@color/colorGrey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp">

                <TextView
                    style="@style/SettingsActivityNormal"
                    android:text="@string/make_notifications_vibrate" />

                <Switch
                    android:id="@+id/swMakeVibrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/widget_arrow" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_lv_1"
                android:background="@color/colorGrey" />

            <TextView
                style="@style/SettingsActivityHeader"
                android:layout_marginTop="@dimen/_15sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:text="@string/others" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp">

                <TextView
                    style="@style/SettingsActivityNormal"
                    android:text="@string/display_customized_avatar_on_home_screen" />

                <Switch
                    android:id="@+id/swCustomizedAvatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:src="@drawable/widget_arrow" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_lv_1"
                android:background="@color/colorGrey" />

            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="center_vertical"-->
            <!--android:paddingEnd="@dimen/_10sdp"-->
            <!--android:paddingStart="@dimen/_10sdp">-->

            <!--<TextView-->
            <!--style="@style/SettingsActivityNormal"-->
            <!--android:text="@string/acknowledgements" />-->

            <!--<ImageView-->
            <!--android:layout_width="@dimen/_15sdp"-->
            <!--android:layout_height="@dimen/_15sdp"-->
            <!--android:src="@drawable/widget_arrow" />-->

            <!--</LinearLayout>-->

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/line_lv_1"-->
            <!--android:background="@color/colorGrey" />-->

            <LinearLayout
                android:id="@+id/llPrivacyPolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp">

                <TextView
                    style="@style/SettingsActivityNormal"
                    android:text="@string/privacy_policy" />

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/widget_arrow" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_lv_1"
                android:background="@color/colorGrey" />

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="bottom|end">

        <Button
            android:id="@+id/btnSave"
            style="@style/ButtonBottom"
            android:text="@string/save" />
    </RelativeLayout>

</LinearLayout>