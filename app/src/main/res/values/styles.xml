<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SettingsActivityHeader">
        <item name="android:fontFamily">@font/museo_sans_rounded_300</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="SettingsActivityNormal">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/_15sdp</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/museo_sans_rounded_100</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="ButtonBottom">
        <item name="android:layout_width">@dimen/_140sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:background">@drawable/border_button</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="TipsActivityLinearLayout">
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TipsActivityImageView">
        <item name="android:layout_width">@dimen/_35sdp</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
    </style>

    <style name="TipsActivityTextView">
        <item name="android:fontFamily">@font/museo_sans_rounded_500</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TipsActivitySeperator">
        <item name="android:layout_marginStart">@dimen/_60sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_1sdp</item>
        <item name="android:background">@color/colorGrey</item>
    </style>

</resources>
